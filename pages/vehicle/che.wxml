<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">

          <view wx:for="{{records}}" wx:key="{{index}}" class="weui-cells weui-cells_after-title">
        <view class="weui-panel">
          <view class="weui-panel__bd">
            <view class="weui-media-box weui-media-box_text">
              <view class="weui-media-box__title weui-media-box__title_in-text">{{item.user.nickName}} </view>
              <view class="weui-media-box__desc">
                轮毂里程：{{item.wheelNum}}, 仪表盘里程：{{item.digitNum}},
                <view wx:if="{{item.isWrong}}" wx:for="{{item.errorMsgList}}" wx:key="{{index}}" wx:for-item="errorMsg">
                  {{errorMsg}}{{item.errorMsgList.length != index+1 ? ',': ''}}
                </view>
              </view>
              <view class="weui-media-box__info">
                <view class="weui-media-box__info__meta">{{item.isTuan?'团号:':'用途:'}}{{item.category}}</view>
                <view class="weui-media-box__info__meta">{{item.timeAtFormat}}</view>
              </view>
            </view>
          </view>
        </view>
      </view>
        </view>
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
          
        </view>
        <view class="weui-tab__content" hidden="{{activeIndex != 2}}">
         
        </view>
      </view>
    </view>
  </view>
</view>