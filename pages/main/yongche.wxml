<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
          <!--pages/tuan/shangtuan.wxml-->
          <view class="page">
            <view class="page__bd">
              <view wx:if='{{plateSelected}}' class="weui-cells__title che-selected">已选择车： {{plateSelected}}</view>
              <view wx:else class="weui-cells__title">如输入78，然后点选LWQ178：</view>
              <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_input">
                  <view class="weui-cell__hd">
                    <view class="weui-label">搜索车牌</view>
                  </view>
                  <view class="weui-cell__bd">
                    <input class="weui-input" bindinput='bindPlateFilterInput' value='{{filterInput}}' />
                  </view>
                </view>
              </view>
              <view wx:for="{{filteredCheList}}" wx:key="{{index}}" >
      <button bindtap='bindCheButtonClick' data-che='{{item}}' data-plate='{{item.plate}}' class="weui-btn mini-btn float-left" type="{{plateSelected==item.plate ? primary : default}}" size="mini">{{item.plate}}</button>
              </view>
              <view class="weui-cells__title">上团需更新如下信息：</view>
              <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_input">
                  <view class="weui-cell__hd">
                    <view class="weui-label">团号</view>
                  </view>
                  <view class="weui-cell__bd">
                    <input bindinput='bindTuanNumInput' class="weui-input" value='{{tuanNum}}' placeholder="输入团号" />
                  </view>
                </view>
                <view class="weui-cell weui-cell_input">
                  <view class="weui-cell__hd">
                    <view class="weui-label">其它用途</view>
                  </view>
                  <view class="weui-cell__bd">
                    <input bindinput='bindOtherUseInput' class="weui-input" value='{{otherUse}}' placeholder="请输入用途" />
                  </view>
                </view>
                <view class="weui-cell weui-cell_input">
                  <view class="weui-cell__hd">
                    <view class="weui-label">轮毂里程</view>
                  </view>
                  <view class="weui-cell__bd">
                    <input class="weui-input" bindinput='bindWheelNumInput' value='{{wheelNum}}' placeholder="请输入轮毂里程" />
                  </view>
                </view>
                <view class="weui-cell weui-cell_input">
                  <view class="weui-cell__hd">
                    <view class="weui-label">仪表盘里程</view>
                  </view>
                  <view class="weui-cell__bd">
                    <input class="weui-input" bindinput='bindDigitNumInput' value="{{digitNum}}" placeholder="请输入仪表盘里程" />
                  </view>
                </view>
              </view>
              <!--<view class="weui-cells__tips">底部说明文字底部说明文字</view>-->
              <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap="bindUseButtonTap">开始用车</button>
              </view>
            </view>
          </view>
        </view>
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
          <view class="weui-cells weui-cells_after-title">
            <navigator url="/pages/index/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
              <view class="weui-cell__hd">
                <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
              </view>
              <view class="weui-cell__bd">LDL509</view>
              <view class="weui-cell__ft weui-cell__ft_in-access">老板在开</view>
            </navigator>
            <navigator url="/pages/index/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
              <view class="weui-cell__hd">
                <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
              </view>
              <view class="weui-cell__bd">508</view>
              <view class="weui-cell__ft weui-cell__ft_in-access">在韩国车场</view>
            </navigator>
          </view>
        </view>
        <view class="weui-tab__content" hidden="{{activeIndex != 2}}">
          <view class="weui-cells weui-cells_after-title">
            <navigator url="/pages/index/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
              <view class="weui-cell__hd">
                <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
              </view>
              <view class="weui-cell__bd">99</view>
              <view class="weui-cell__ft weui-cell__ft_in-access">在基督城宿舍</view>
            </navigator>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>